# Environment Configuration for VoxCord

# Server
NODE_ENV=production
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=info

# Security
JWT_SECRET=CHANGE_THIS_TO_A_RANDOM_STRING_IN_PRODUCTION
JWT_REFRESH_SECRET=CHANGE_THIS_TO_ANOTHER_RANDOM_STRING
CORS_ORIGIN=https://chat.sosiagaming.com

# Database
DATABASE_URL=postgresql://voxcord:voxcord_password@postgres:5432/voxcord
POSTGRES_USER=voxcord
POSTGRES_PASSWORD=voxcord_password
POSTGRES_DB=voxcord

# Redis
REDIS_URL=redis://redis:6379

# LiveKit
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret
LIVEKIT_URL=wss://chat.sosiagaming.com:3045

# MinIO (S3-compatible storage)
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=voxcord_minio_access
MINIO_SECRET_KEY=voxcord_minio_secret_key_change_me
MINIO_BUCKET=voxcord-files

# ntfy (Push notifications)
NTFY_URL=http://ntfy:80
NTFY_BASE_URL=https://push.yourdomain.com
