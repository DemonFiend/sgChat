{
  "name": "sgchat",
  "version": "1.0.0",
  "private": true,
  "description": "Self-hosted Discord clone with voice, video, and text chat",
  "author": "sgChat Team",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "pnpm --filter=@sgchat/api dev",
    "dev:web": "pnpm --filter=@sgchat/web dev",
    "dev:all": "pnpm --filter=@sgchat/* dev",
    "build": "pnpm --filter=@sgchat/shared build && pnpm --filter=@sgchat/web build && pnpm --filter=@sgchat/api build",
    "build:web": "pnpm --filter=@sgchat/web build",
    "build:api": "pnpm --filter=@sgchat/shared build && pnpm --filter=@sgchat/api build",
    "start": "pnpm --filter=@sgchat/api start",
    "clean": "pnpm --filter=@sgchat/* clean",
    "typecheck": "pnpm --filter=@sgchat/* typecheck",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  }
}
