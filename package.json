{
  "name": "voxcord",
  "version": "1.0.0",
  "private": true,
  "description": "Self-hosted Discord clone with voice, video, and text chat",
  "author": "VoxCord Team",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "pnpm --filter=@voxcord/* dev",
    "build": "pnpm --filter=@voxcord/* build",
    "clean": "pnpm --filter=@voxcord/* clean",
    "typecheck": "pnpm --filter=@voxcord/* typecheck",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  }
}
